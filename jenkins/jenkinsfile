pipeline {
    agent {
        kubernetes {
            inheritFrom 'git,nodejs-runner'  // Use pre-defined pod templates
        }
    }

    stages {
        stage('Clone Repository') {
            steps {
                container('git') {
                    withCredentials([usernamePassword(credentialsId: 'git-credentials', usernameVariable: 'GIT_USER', passwordVariable: 'GIT_PASS')]) {
                        sh 'git clone https://$GIT_USER:$GIT_PASS@github.com/example/node-app.git $WORKSPACE/node-app'
                    }
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                container('nodejs-runner') {  // Use the 'nodejs-runner' container
                    sh 'cd $WORKSPACE/node-app && npm install'
                }
            }
        }

        // stage('Run Tests') {
        //     steps {
        //         container('nodejs-runner') {
        //             sh 'cd $WORKSPACE/node-app && npm test'
        //         }
        //     }
        // }

        // stage('Build') {
        //     steps {
        //         container('nodejs-runner') {
        //             sh 'cd $WORKSPACE/node-app && npm run build'
        //         }
        //     }
        // }

        // stage('Deploy') {
        //     steps {
        //         container('nodejs-runner') {
        //             sh 'cd $WORKSPACE/node-app && npm run deploy'
        //         }
        //     }
        // }
    }
}
